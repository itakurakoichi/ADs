@charset "utf-8"

/* Setting for Sample Verification */

*
	margin 0
	padding 0

.wrapper
	padding 50px 0 1000px 0

.gheader
	position fixed
	top 0
	left 0
	width 100%
	text-align center
	background #0af
	color #fff
	padding 10px
	box-shadow 0 2px 4px #666
	> h1
		font-size 16px

.ad
	width 100%

	a
		display block
		text-decoration none
		font-weight bold
		color #fff
		text-align center
		background #000

.entry-content
	padding 10px

