/* Ver. fixed page bottom */
.ad
	position fixed
	width 100%
	text-align center

	a
		display block
		text-decoration none
		font-weight bold

		&:hover
			opacity .5
/**
 * Each Style styles needed this AD pattern
 */

figSize = 100px

.ad
	bottom 10px
	right 10px
	width figSize
	height figSize

	a
		width figSize
		height figSize
		border-radius 50%
		overflow hidden

.anim
	animation Bounce 4000ms ease-out infinite 0ms

@keyframes Bounce
	0%
		bottom 10px
	5%
		bottom 10px
	10%
		bottom 25px
	13%
		bottom 10px
	15%
		bottom 20px
	18%
		bottom 10px
	20%
		bottom 15px
	22%
		bottom 10px
	100%
		bottom 10px

	